{
    "questions": [
        {
            "id": "q0",
            "text": "Commençons par le début : Quel est le nom de votre projet ?",
            "type": "text",
            "context_key": "project_name",
            "required": true
        },
        {
            "id": "q1",
            "text": "Dans quel pays se situe votre cible principale ?",
            "type": "select",
            "options": [
                {
                    "label": "Bénin",
                    "value": "BJ"
                },
                {
                    "label": "Sénégal",
                    "value": "SN"
                },
                {
                    "label": "Côte d'Ivoire",
                    "value": "CI"
                },
                {
                    "label": "Cameroun",
                    "value": "CM"
                },
                {
                    "label": "France",
                    "value": "FR"
                },
                {
                    "label": "Autre",
                    "value": "OTHER"
                }
            ],
            "context_key": "target_country",
            "required": true
        },
        {
            "id": "q2",
            "text": "Quel est le secteur d'activité de votre projet ?",
            "type": "select",
            "options": [
                {
                    "label": "E-commerce / Boutique en ligne",
                    "value": "ecommerce"
                },
                {
                    "label": "Fintech / Services Financiers",
                    "value": "fintech"
                },
                {
                    "label": "Santé / HealthTech",
                    "value": "health"
                },
                {
                    "label": "Agriculture / AgriTech",
                    "value": "agritech"
                },
                {
                    "label": "Services B2B / SaaS Pro",
                    "value": "b2b"
                },
                {
                    "label": "Logistique / Transport",
                    "value": "logistics"
                },
                {
                    "label": "Autre",
                    "value": "other"
                }
            ],
            "context_key": "sector",
            "required": true
        },
        {
            "id": "q_prob",
            "text": "Décrivez le problème majeur que vous souhaitez résoudre.",
            "type": "text",
            "context_key": "problem_statement",
            "required": true
        },
        {
            "id": "q_demand",
            "text": "Pourquoi pensez-vous qu'il y a une forte demande maintenant ?",
            "type": "text",
            "context_key": "market_demand",
            "required": true
        },
        {
            "id": "q_sol",
            "text": "En quoi consiste votre solution concrètement ?",
            "type": "text",
            "context_key": "solution_description",
            "required": true
        },
        {
            "id": "q_comp_study",
            "text": "Identifiez un concurrent majeur et ses lacunes.",
            "type": "text",
            "context_key": "competitor_analysis",
            "required": true
        },
        {
            "id": "q_uvp",
            "text": "Quel est votre 'plus' par rapport aux autres ?",
            "type": "text",
            "context_key": "unique_value_prop",
            "required": true
        },
        {
            "id": "q_fintech_1",
            "text": "Devez-vous gérer plusieurs devises ?",
            "type": "radio",
            "options": [
                {
                    "label": "Oui, multi-devises",
                    "value": true
                },
                {
                    "label": "Non, devise locale unique",
                    "value": false
                }
            ],
            "context_key": "multi_currency",
            "condition": "sector == 'fintech'",
            "required": true
        },
        {
            "id": "q3",
            "text": "Quelle est la taille de votre équipe technique ?",
            "type": "radio",
            "options": [
                {
                    "label": "Seul (fondateur)",
                    "value": 1
                },
                {
                    "label": "2 à 5 personnes",
                    "value": 3
                },
                {
                    "label": "Plus de 5 personnes",
                    "value": 6
                }
            ],
            "context_key": "team_size",
            "required": true
        },
        {
            "id": "q6",
            "text": "Budget estimé pour le lancement (FCFA) ?",
            "type": "select",
            "options": [
                {
                    "label": "Moins de 2M",
                    "value": "low"
                },
                {
                    "label": "2M à 10M",
                    "value": "medium"
                },
                {
                    "label": "Plus de 10M",
                    "value": "high"
                }
            ],
            "context_key": "budget",
            "required": true
        },
        {
            "id": "q13",
            "text": "Besoin de paiements en ligne ?",
            "type": "radio",
            "options": [
                {
                    "label": "Oui",
                    "value": true
                },
                {
                    "label": "Non",
                    "value": false
                }
            ],
            "context_key": "needs_online_payment",
            "required": true
        },
        {
            "id": "q13_extra",
            "text": "Méthode de paiement prioritaire ?",
            "type": "select",
            "options": [
                {
                    "label": "Mobile Money",
                    "value": "momo"
                },
                {
                    "label": "Cartes Bancaires",
                    "value": "card"
                },
                {
                    "label": "Mixte",
                    "value": "hybrid"
                }
            ],
            "context_key": "payment_method",
            "condition": "needs_online_payment == True",
            "required": true
        },
        {
            "id": "q14",
            "text": "Application mobile native indispensable ?",
            "type": "radio",
            "options": [
                {
                    "label": "Oui",
                    "value": true
                },
                {
                    "label": "Non, Web App (PWA) suffit",
                    "value": false
                }
            ],
            "context_key": "needs_mobile_app",
            "required": true
        },
        {
            "id": "q12",
            "text": "Votre priorité absolue ?",
            "type": "select",
            "options": [
                {
                    "label": "Vitesse de lancement",
                    "value": "speed"
                },
                {
                    "label": "Coût minimal",
                    "value": "cost"
                },
                {
                    "label": "Qualité/Sécurité",
                    "value": "quality"
                }
            ],
            "context_key": "priority",
            "required": true
        }
    ]
}